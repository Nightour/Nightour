<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlFragmentPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.infact.nightour.activity.PerfilFragment">
    <FrameLayout
        android:id="@+id/flPerfilFotoEPlanoDeFundoENome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivFotoDeFundoDoPerfil"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:layout_gravity="bottom"
            android:id="@+id/tvnomeDoUsuarioNoPerfil"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="150dp"
            android:text="John Legend"
            android:textColor="@color/textColorPrimary"
            android:background="#67242625"/>
        <ImageView
            android:id="@+id/ivFotoDoUsuarioNoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="bottom"
            android:background="@drawable/profile_exemple"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/llInformacoesNoPerfil"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#1a1a1a"
        android:paddingLeft="13dp"
        android:layout_below="@+id/flPerfilFotoEPlanoDeFundoENome">

        <TextView
            android:id="@+id/tvidadeDoUsuarioNoPerfil"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="21 anos"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/tvGeneroDoUsuarioNoPerfil"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Homem"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/tvInteresseDoUsuarioNoPerfil"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Interessado em Mulheres"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llInformacoesNoPerfil"
        android:orientation="horizontal"
        android:background="#242625">
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="INTERESSES"
            android:textColor="@color/textColorPrimary"
            android:background="#242625"/>
        <View
            android:id="@+id/vDivisorDeBotoesNoPerfil"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/textColorPrimary"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="SEGUIDORES"
            android:textColor="@color/textColorPrimary"
            android:background="#242625"/>
        <View
            android:id="@+id/vDivisorDeBotoesNoPerfil2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/textColorPrimary"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="SEGUINDO"
            android:textColor="@color/textColorPrimary"
            android:background="#242625"/>
    </LinearLayout>
</RelativeLayout>
