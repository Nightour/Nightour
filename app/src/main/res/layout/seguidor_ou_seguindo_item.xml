<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="140dp" android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/ivFotoSeguidorOuSeguindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/perfil_do_cara___ok_05"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tvNomeSeguidorOuSeguindo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLines="2"
            android:layout_below="@id/ivFotoSeguidorOuSeguindo"/>

</RelativeLayout>